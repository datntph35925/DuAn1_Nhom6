<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:layout_marginTop="30dp"
    tools:context=".Views.Singup">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng Ký"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginBottom="20dp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edDK_tenDN"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:hint="Tên đăng nhập"
            android:paddingStart="20dp"
            android:background="@drawable/khung"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edDK_hoten"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:hint="Họ Tên"
            android:paddingStart="20dp"
            android:background="@drawable/khung"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edDK_matkhau"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:hint="Mật khẩu"
            android:paddingStart="20dp"
            android:background="@drawable/khung"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edDK_xnmatkhau"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:hint="Xác nhận mật khẩu"
            android:paddingStart="20dp"
            android:background="@drawable/khung"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <TextView
            android:layout_width="170dp"
            android:layout_height="5px"
            android:background="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text=" or "/>
        <TextView
            android:layout_width="170dp"
            android:layout_height="5px"
            android:background="@color/black"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnDK_facebook"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_marginTop="50px"
        android:layout_gravity="center"
        android:background="@drawable/button_gg"
        android:drawableStart="@drawable/facebook"
        android:paddingStart="40dp"
        android:text="Đăng Ký bằng Facebook"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btnDK_google"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_marginTop="50px"
        android:layout_gravity="center"
        android:background="@drawable/button_gg"
        android:drawableStart="@drawable/search"
        android:paddingStart="40dp"
        android:text="Đăng Ký bằng Google"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btnDangky"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Đăng Ký"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/khungbuton"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn đã có tài Khoản ?"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/tvDangnhap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng Nhập"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            />
    </LinearLayout>


</LinearLayout>