<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="30dp"
    tools:context=".Views.Login">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chào mừng đến với DUO"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:layout_gravity="center"/>


    <Button
        android:id="@+id/btnDN_facebook"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_marginTop="50px"
        android:layout_gravity="center"
        android:background="@drawable/button_gg"
        android:drawableStart="@drawable/facebook"
        android:paddingStart="40dp"
        android:text="Đăng Nhập bằng Facebook"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btnDN_google"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_marginTop="50px"
        android:layout_gravity="center"
        android:background="@drawable/button_gg"
        android:drawableStart="@drawable/search"
        android:paddingStart="40dp"
        android:text="Đăng Nhập bằng Google"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btnDN_admin"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_marginTop="50px"
        android:layout_gravity="center"
        android:background="@drawable/button_gg"
        android:drawableStart="@drawable/user"
        android:paddingStart="40dp"
        android:text="Đăng Nhập bằng tài khoản Admin"
        android:textAllCaps="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hoặc đăng nhập bằng tài khoản"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="30px"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edDN_tenDN"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:hint="Tên đăng nhập"
            android:paddingStart="20dp"
            android:background="@drawable/khung"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edDN_matkhau"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:hint="Mật Khẩu"
            android:paddingStart="20dp"
            android:background="@drawable/khung"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/tvQuenmatkhau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quên mật khẩu?"
        android:layout_marginTop="30px"
        android:layout_marginRight="20dp"
        android:layout_gravity="right"
        android:textColor="@color/black"
        android:textSize="20dp"/>
    <Button
        android:id="@+id/btnDangnhap"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Đăng Nhập"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/khungbuton"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >


       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Bạn chưa có tài Khoản ?"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="20dp"
           android:textSize="20dp"
           />
        <TextView
            android:id="@+id/tvDangky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng Ký"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            />

    </LinearLayout>





</LinearLayout>