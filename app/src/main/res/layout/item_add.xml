<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="20dp">

    <ImageView
        android:id="@+id/btnCloseDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_close_24"
        android:layout_gravity="end"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Close Dialog"/>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="THÊM SẢN PHẨM"
        android:textColor="#3F51B5"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edTen_ad"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/bgbtn"
        android:hint="Nhập tên phim: "
        android:paddingLeft="20sp"
        android:textColor="@color/black"

        />

    <EditText
        android:id="@+id/edDaodien_ad"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/bgbtn"
        android:hint="Nhập  đạo diễn: "
        android:paddingLeft="20sp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/edThoiluong_ad"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/bgbtn"
        android:hint="Nhập thời lượng: "
        android:paddingLeft="20sp"
        android:textColor="@color/black" />
    <Spinner
        android:id="@+id/spTheloai_ad"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/bgbtn"
        android:paddingLeft="20sp"
        android:textColor="@color/black" />
    <EditText
        android:id="@+id/edMota_ad"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/bgbtn"
        android:hint="Nhập mô tả: "
        android:paddingLeft="20sp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/Poster_ad"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/bgbtn"
        android:hint="Nhập Link Poster: "
        android:paddingLeft="20sp"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btnAdd_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm"
        android:layout_gravity="center"
        android:backgroundTint="#0098FF"
        />
</LinearLayout>